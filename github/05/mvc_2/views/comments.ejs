    <body>
        <h4>댓글 모음</h4>
        <a href="/">메인으로</a>
        <ul>
            <% for( let i = 0; i < commentInfos.length; i++ ) { %>
            <li>
                <span><%= commentInfos[i].userId %></span>
                <a href="/comment/<%= i+1 %>" target="_blank"><%= commentInfos[i].comment %></a>
            </li>
            <% } %>
        </ul>
    </body>
</html>
